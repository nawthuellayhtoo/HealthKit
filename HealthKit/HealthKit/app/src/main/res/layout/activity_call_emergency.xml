<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.healthkit.activities.CallEmergencyActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_ambulance"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:text="For emergency call, this dialer will call to Victoria hospital's ambulance. There is 24hrs ambulance service. PH: 01 666 141."
        android:textSize="17sp"
        android:lineSpacingMultiplier="1.2"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/im_btn_call_emergency"
        android:text="Call"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:background="@drawable/call_emergency_btn"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="50dp"/>

</LinearLayout>

</ScrollView>